<p id="notice"><%= notice %></p>

<h1>Part Completions</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Lesson</th>
      <th>Lesson part</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @part_completions.each do |part_completion| %>
      <tr>
        <td><%= link_to "#{part_completion.student.name}", user_path(part_completion.student.id) %></td>
        <td><%= part_completion.lesson_part.lesson.title %></td>
        <td><%= part_completion.lesson_part.title %></td>
        <td><%= link_to 'Show', part_completion %></td>
        <td><%= link_to 'Edit', edit_part_completion_path(part_completion) %></td>
        <td><%= link_to 'Destroy', part_completion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

